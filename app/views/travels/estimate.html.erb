<div class="container" style="margin-top: 200px">
  <h2>Sua viagem começa aqui</h2>

  <%= form_with(url: converter_travels_path, method: :post, id: 'form-estimate') do |form| %>

    <div class="form-group row">
      <%= form.label :estimate, 'Orçamento em reais (R$)', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.number_field :estimate, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :destiny, "Destino", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.select :destiny, Travels::UpdateEstimate.all_countries,{ include_blank: 'Selecione:'}, { class: 'form-select', required: true, "aria-label":"Default select example" } %>
      </div>
    </div>

    <button class="btn btn-primary" type="submit" id="btn-converter">Converter</button>
  <% end %>
</div>
